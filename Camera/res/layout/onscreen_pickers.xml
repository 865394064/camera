<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/on_screen_pickers"
    android:layout_height="45dip"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
    android:splitMotionEvents="false"><!--del style="@style/OnScreenPickerGroup"-->
    <com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_slow_motion_picker"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="gone"/><!--del style="@style/OnScreenPickerFixed"-->
    <!--begin: added by scq-->
    <LinearLayout
        android:id="@+id/onscreen_flash_proactive_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
        android:visibility="gone">
    <com.android.camera.ui.RotateImageView
        android:id="@+id/onscreen_flash_proactive_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="25dp"
        android:src="@drawable/ic_flash_off_holo_light_iphone"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/iphone_flash_auto_text_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">
    <TextView
        android:id="@+id/iphone_flash_auto_text_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/iphone_flash_auto_text"
        android:textColor="@color/mode_title_color_normal"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/iphone_flash_on_text_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">
    <TextView
        android:id="@+id/iphone_flash_on_text_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/iphone_flash_on_text"
        android:textColor="@color/mode_title_color_normal"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/iphone_flash_off_text_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone">
    <TextView
        android:id="@+id/iphone_flash_off_text_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/iphone_flash_off_text"
        android:textColor="@color/mode_title_color"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <!--end: added by scq-->
    <LinearLayout
        android:id="@+id/onscreen_flash_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1">
    <com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_flash_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="25dp"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_smile_shot_picker"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"/><!--style="@style/OnScreenPickerFixed"-->
    <LinearLayout
        android:id="@+id/onscreen_hdr_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
   	 android:gravity="center">
    <com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_hdr_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/onscreen_dynamic_linear"   
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
   	 android:gravity="center">
    <ImageView
        android:id="@+id/onscreen_dynamic_picker"   
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:src="@drawable/onscreen_dynamic_picker"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
    <com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_stereo3d_picker"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/><!--style="@style/OnScreenPickerFixed"-->
    <LinearLayout
        android:id="@+id/onscreen_gesture_shot_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
   	 android:gravity="center">
    <!--<com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_gesture_shot_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        />-->
    <com.android.camera.ui.RotateImageView
        android:id="@+id/onscreen_gesture_shot_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:clickable="true"
    	 android:paddingTop="5dip"
    	 android:paddingBottom="5dip"
        android:src="@drawable/ic_countdown_clock"/><!--style="@style/OnScreenPickerFixed"-->
    </LinearLayout>
   <LinearLayout
        android:id="@+id/onscreen_camera_linear"
   	 android:layout_width="0dip"
   	 android:layout_height="match_parent"
   	 android:layout_weight="1"
   	 android:gravity="center">
   <!-- Modify by scq:
   <com.android.camera.ui.PickerButton
        android:id="@+id/onscreen_camera_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        />--><!--style="@style/OnScreenPickerFixed"-->
    <com.android.camera.ui.RotateImageView
        android:id="@+id/onscreen_camera_picker"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:clickable="true"
    	 android:paddingTop="5dip"
    	 android:paddingBottom="5dip"
        android:src="@drawable/ic_setting_normal_iphone"/>
    </LinearLayout>
</LinearLayout>

